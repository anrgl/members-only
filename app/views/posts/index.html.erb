<% @posts.each do |post| %>
    <div class="card mb-5">
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= post.body %></p>
          <% if user_signed_in? %>
            <footer class="blockquote-footer"><%= post.user.name %></footer>
            <% else %>
            <footer class="blockquote-footer">Anonymouse</footer>
            <% end %>
        </blockquote>
      </div>
    </div>
<% end %>
